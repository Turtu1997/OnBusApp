<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    tools:context="com.example.stefanotortone.onbusapp.MainActivity">

    <TextView
        android:id="@+id/lblText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="registrati_utilizzando_un_social"
        app:layout_constraintBottom_toTopOf="@+id/btnFacebook"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="116dp"
        android:layout_height="113dp"
        app:srcCompat="@drawable/logo"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/lblTitle"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.509"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/lblText2" />

    <TextView
        android:id="@+id/lblTitle"
        android:layout_width="193dp"
        android:layout_height="58dp"
        android:text="ONBUS"
        android:textColor="@color/ColoorApp"
        android:textSize="50sp"
        android:textStyle="bold"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/lblText2" />

    <Button
        android:id="@+id/btnFacebook"
        android:layout_width="209dp"
        android:layout_height="47dp"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/FacebookColor"
        android:text="Registrati con Facebook"
        android:textColor="@android:color/background_light"
        app:layout_constraintBottom_toTopOf="@+id/btnGmail"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/btnGmail"
        android:layout_width="206dp"
        android:layout_height="47dp"
        android:layout_marginBottom="101dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/GmailColor"
        android:text="Registrati con gmail"
        android:textColor="@android:color/background_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
